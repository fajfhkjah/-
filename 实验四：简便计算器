//v0
#include<stdio.h>
#include<string.h>
int main()
{
	char str[]="3+4";

	int a=str[0]-'0';
	int b=str[2]-'0';
	int ans=a+b;
	printf("ans=%d\n",ans);

	return 0;
}

//v1
#include<stdio.h>
#include<string.h>
int main()
{
	char str[]="1+2+2+1+2+5+4-1-3+4-8";
	int ans=str[0]-'0';
	for(int i=1;i<strlen(str);i++)
	{
		if(str[i]=='+')
		{
			int a=str[i+1]-'0';
			ans=ans+a;
			i++;
		}
		else if(str[i]=='-')
		{
			int a=str[i+1]-'0';
			ans=ans-a;
			i++;
		}

	}
	printf("ans=%d\n",ans);

	return 0;
}

//v2
#include<stdio.h>
#include<string.h>
int main()
{
	char str[]="2*2/4*1/1*2*3/2";
	int ans=str[0]-'0';
	for(int i=1;i<strlen(str);i++)
	{
		if(str[i]=='*')
		{
			int a=str[i+1]-'0';
			ans=ans*a;
			i++;
		}
		else if(str[i]=='/')
		{
			int a=str[i+1]-'0';
			ans=ans/a;
			i++;
		}

	}
	printf("ans=%d\n",ans);

	return 0;
}

//v3
#include<stdio.h>
#include<string.h>
int main()
{
	char strexp[]="2+2*3+2/2-1";
	char strtmp[100];
	int strtmpIndex=-1;
	int i=1;
	for(;i<strlen(strexp);i++)
	{
		if(strexp[i]=='*')
		{
			int a=strtmp[strtmpIndex]-'0';
			int b=strexp[i+1]-'0';
			i++;
		}
		else if(strexp[i]=='/')
		{
			int a=strtmp[strtmpIndex]-'0';
			int b=strexp[i+1]-'0';
			i++;
		}
		else
		{
			strtmp[++strtmpIndex]=strexp[i];
		}
	}
	int ans=strtmp[0]-'0';
	for(;i,strlen(strtmp);i++)
	{
		if(strtmp[i]=='+')
		{
			ans+=strtmp[++i]-'0';
		}
		else if(strtmp[i]=='-')
		{
			ans-=strtmp[++i]-'0';
		}
	}
	printf("ans=%d\n",ans);

	return 0;
}

